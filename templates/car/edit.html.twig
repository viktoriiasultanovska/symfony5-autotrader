{% extends 'base_admin.html.twig' %}

{% block title %}Edit Car{% endblock %}

{% block body %}
    <h1>Edit Car</h1>
    <div class="row">
        <div class="col-md-3">
            <div class="widget">
                {% if car.image %}
                    <img src="{{ asset('uploads/car/' ~ image) }}"
                         alt="{{ car.vendor.name }} {{ car.model.name }}"
                         style="max-width: 250px;" />
                {% else %}
                    <img src="{{ asset('image/vehicle-placeholder.png') }}"
                         alt="{{ car.vendor.name }} {{ car.model.name }}"
                         style="max-width: 250px;" />
                {% endif %}
            </div>
        </div>
        <div class="col-md-6">
            <div class="widget">{{ include('car/_form.html.twig', {'button_label': 'Update'}) }}</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="col-md-3">
                <a href="{{ path('car_index') }}" class="btn btn-transparent">back to list</a>
            </div>
            <div class="col-md-3">
                {{ include('car/_delete_form.html.twig') }}
            </div>
        </div>

    </div>
{% endblock %}
