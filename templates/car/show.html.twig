{% extends 'base_admin.html.twig' %}

{% block title %}{{ car.vendor.name }} {{ car.model.name }}{% endblock %}

{% block body %}
    <h1>{{ car.vendor.name }} {{ car.model.name }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ car.id }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ car.price }}</td>
        </tr>
        <tr>
            <th>Year</th>
            <td>{{ car.year }}</td>
        </tr>
        <tr>
            <th>Navigation</th>
            <td>{{ car.navigation ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ car.description }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('car_index') }}">back to list</a>

    <a href="{{ path('car_edit', {'id': car.id}) }}">edit</a>

    {{ include('car/_delete_form.html.twig') }}

    <img src="{{ asset('uploads/car/' ~ car.image) }}" alt="" style="max-width: 400px;">
{% endblock %}
